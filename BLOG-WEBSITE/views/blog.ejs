<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>BLOGS</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class = 'conatiner mt-3'>
        <h1 style="text-align: center;"><%= blog.title %></h1>
        <div style="text-align: center;">
          <img src="../<%= blog.coverImage %>" width="400px"/>        
        </div>
        <pre><%= blog.Body %></pre>  
    </div>

    <div class = 'conatiner mt-3'>
        <form action="/blog/<%= blog._id %>" method = "post">
            <button type="submit" class="btn btn-primary">Like</button>
        </form>
        <%= blog.liked.length %>
    </div>      

    <div class = 'conatiner mt-3'>
        <form action="/comment/<%= blog._id %>" method = "post">
            <label for="Comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="Comment" name="content">            
            <button type="submit" class="btn btn-primary">comment</button>
        </form>

        <div style="text-align: left;">
          <!-- <img src="../<%= blog.coverImage %>" width="400px"/>         -->
          <% if (locals.Comment) { %>
               <% Comment.forEach(comment => { %>
                <div class = "conatiner mt-4">
                     <img src="../<%= comment.userId.profileImageURL %>" width="60px"/>
                     <h7> <%=comment.userId.fullname %> </h7>
                     <br>
                     <h6><%= comment.content %></h6>
                     <br>
                    </div>  
               <% }) %>
          <% } %>
        </div>    
    </div>    
    <%- include('./partials/script.ejs') %>
</body>
</html>